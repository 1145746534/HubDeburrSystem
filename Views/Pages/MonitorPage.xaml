<UserControl x:Class="HubDeburrSystem.Views.Pages.MonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HubDeburrSystem.Views.Pages"
             xmlns:c="clr-namespace:HubDeburrSystem.Public.Converter"
             xmlns:h="http://schemas.mvtec.com/halcondotnet"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=MonitorPageViewModelLocator}" Loaded ="UserControl_Loaded" Unloaded="UserControl_Unloaded"
             d:DesignHeight="850" d:DesignWidth="1550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Assets/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Assets/Styles/GroupBoxStyle.xaml"/>
                <ResourceDictionary>
                    <c:UserTypeValueConverter x:Key="UserTypeValueConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="70,10,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Border CornerRadius="5" Background="#88D1D5E8">
            <h:HSmartWindowControlWPF  Name="MonitorHWindow"  Background="#999" Margin="5,5" HKeepAspectRatio="True">
                <h:HIconicDisplayObjectWPF IconicObject="{Binding CurrentImage}"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding SourceLocus}" HColor="magenta"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding OldCenterCross}" HColor="magenta"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding ProcessingLocus}" HColor="green"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding NewCenterCross}" HColor="green"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding ProcessingLocusOffset}" HColor="blue"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding LocusCross}" HColor="yellow"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding LocusRectangle}" HColor="yellow"/>
                <h:HIconicDisplayObjectWPF IconicObject="{Binding BurrContours}" HColor="red"/>
                
            </h:HSmartWindowControlWPF>
        </Border>
        <Border Visibility="{Binding ProcessingResultDisplayed}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="300" Width="280" Margin="10,10,0,0" Background="Transparent">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="轮型：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBlock Text="{Binding WheelType}"  FontSize="18" VerticalAlignment="Bottom" Foreground="#FFAAE77F" Width="150" Height="28" Margin="-20,0,0,0"/>

                <TextBlock Grid.Row="1" Text="识别相似度：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding Similarity}"  Grid.Row="1" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="100" Height="30" Margin="25,0,0,0"/>

                <TextBlock Grid.Row="2" Text="模板旋转角度：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding RotationAngle}"  Grid.Row="2" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="100" Height="30" Margin="60,0,0,0"/>

                <TextBlock Grid.Row="3" Text="图像中心行坐标：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ImageCenterRow}"  Grid.Row="3" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="120" Height="30" Margin="120,0,0,0"/>

                <TextBlock Grid.Row="4" Text="图像中心列坐标：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ImageCenterColumn}"  Grid.Row="4" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="120" Height="30" Margin="120,0,0,0"/>

                <TextBlock Grid.Row="5" Text="图像中心行偏移：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ImageCenterRowOffset}"  Grid.Row="5" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="120" Height="30" Margin="120,0,0,0"/>

                <TextBlock Grid.Row="6" Text="图像中心列偏移：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ImageCenterColumnOffset}"  Grid.Row="6" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="120" Height="30" Margin="120,0,0,0"/>

                <TextBlock Grid.Row="7" Text="总轨迹点数：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding TotalPoints}"  Grid.Row="7" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="100" Height="30" Margin="50,0,0,0"/>

                <TextBlock Grid.Row="8" Text="处理结果：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ProcessingResult}"  Grid.Row="8" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="100" Height="30" Margin="-10,0,0,0"/>
                
                <TextBlock Grid.Row="9" Text="处理用时：" Foreground="#FFE2D6D3" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Label Content="{Binding ProcessingTime}"  Grid.Row="9" FontSize="18" HorizontalContentAlignment="Left" Foreground="#FFAAE77F" Width="100" Height="30" Margin="-10,0,0,0"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border CornerRadius="6" Background="#88D1D5E8"/>
            <!--第一块-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                <!--日期时间显示-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding CurrentDate}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#555" FontWeight="Normal" >
                        <TextBlock.LayoutTransform>
                            <ScaleTransform ScaleX="1.2"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                    <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#555">
                        <!--Run只能单向绑定-->
                        <Run Text="{Binding CurrentTime}" FontSize="22" FontWeight="Normal"/>
                        <Run Text=""/>
                        <Run Text="{Binding CurrentWeek}" FontSize="15" FontWeight="Normal"/>
                        <TextBlock.LayoutTransform>
                            <ScaleTransform ScaleX="1.2"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Grid>
                <!--用户管理-->
                <Border Grid.Column="1" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="0.8*"/>
                        </Grid.RowDefinitions>
                        <TextBlock  Margin="0,5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Run Text="{Binding GlobalUserInfo.UserName}" FontSize="18" Foreground="#444"/>
                                <Run Text="{Binding GlobalUserInfo.UserType,StringFormat=[{0}],Converter={StaticResource UserTypeValueConverter}}" Foreground="#666"/>
                        </TextBlock>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Hyperlink TextDecorations="None" Foreground="#555">修改密码</Hyperlink>
                                <Run Text="      "/>
                                <Hyperlink TextDecorations="None" Foreground="#555"
                                           Command="{Binding}"
                                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">退出登录</Hyperlink>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
            <!--第二块-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GroupBox Header="机器人" Margin="0,5" Style="{StaticResource NewGroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="0.7*"/>
                        </Grid.RowDefinitions>
                        <UniformGrid Rows="1" Margin="0,25,0,0">
                            <Border CornerRadius="5" Height="80" Width="65">
                                <Border.Background>
                                    <Binding Path="RobotConnectBackground"/>
                                </Border.Background>
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding RobotConnectionState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="连接状态" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border CornerRadius="5" Height="80" Width="65">
                                <Border.Background>
                                    <Binding Path="OperatingModeBackground"/>
                                </Border.Background>
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe60a;" FontFamily="{StaticResource Iconfont}" Foreground="#22FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding OperatingMode}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                        <!--<TextBlock Text="%" FontSize="11" Foreground="#884c67e6" HorizontalAlignment="Center"/>-->
                                    </StackPanel>
                                    <TextBlock Text="操作模式" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border CornerRadius="5" Height="80" Width="65">
                                <Border.Background>
                                    <Binding Path="ControllerStateBackground"/>
                                </Border.Background>
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe601;" FontFamily="{StaticResource Iconfont}" Foreground="#22FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding RobotControllerState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                        <!--<TextBlock Text="μg/m³" FontSize="10" Foreground="#885db5cc" HorizontalAlignment="Center"/>-->
                                    </StackPanel>

                                    <TextBlock Text="控制器状态" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border CornerRadius="5" Height="80" Width="65">
                                <Border.Background>
                                    <Binding Path="ExecutionStateBackground"/>
                                </Border.Background>
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding ExecutionState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                        <!--<TextBlock Text="℃" FontSize="11" Foreground="#885db5cc" HorizontalAlignment="Center"/>-->
                                    </StackPanel>
                                    <TextBlock Text="运行模式" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border CornerRadius="5" Height="80" Width="65">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#88BDE09C" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding RobotSpeed}" FontSize="14" Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                        <TextBlock Text="mm/s" FontSize="11" Foreground="#885db5cc" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                    <TextBlock Text="当前速度" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                        </UniformGrid>
                        <UniformGrid Grid.Row="1" Rows="2" Columns="3">
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding RobotStartCommand}" IsEnabled="{Binding ButtonEnabled}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xe66b;" FontFamily="{StaticResource Iconfont}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="启      动" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14" Grid.ColumnSpan="2"/>
                                </Grid>
                            </Button>
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding MotorOnCommand}" IsEnabled="{Binding ButtonEnabled}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xe66f;" FontFamily="{StaticResource Iconfont}" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="电机上电" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                                </Grid>
                            </Button>
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding PpToMainCommand}" IsEnabled="{Binding ButtonEnabled}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xed2b;" FontFamily="{StaticResource Iconfont}" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="PPToMain" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="13"/>
                                </Grid>
                            </Button>
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding RobotStopCommand}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xea76;" FontFamily="{StaticResource Iconfont}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="停      止" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                                </Grid>
                            </Button>
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding MotorOffCommand}" Name="MotorOff_btn" IsEnabled="{Binding ButtonEnabled}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xe648;" FontFamily="{StaticResource Iconfont}" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="电机下电" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                                </Grid>
                            </Button>
                            <Button VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Height="35" Width="100"
                                    Grid.Row="1" Command="{Binding FlushedCommand}" IsEnabled="{Binding ButtonEnabled}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xe654;" FontFamily="{StaticResource Iconfont}" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="刷       新" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                                </Grid>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </GroupBox>
                <!--第二块-->
                <GroupBox Grid.Row="1" Header="系统" Margin="0,0,0,5" Style="{StaticResource NewGroupBoxStyle}">
                    <Grid Margin="10,25,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="0.9*"/>
                        </Grid.RowDefinitions>
                        <UniformGrid Rows="2" VerticalAlignment="Center" Margin="0,0,0,0">
                            <Border Background="White" CornerRadius="10" Margin="6,0" Height="44">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                    <Border Width="36" Height="36" CornerRadius="12" Background="#445db5cc">
                                        <TextBlock Text="&#xe63b;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="#5db5cc" FontSize="20"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="加工总数" FontSize="10" Foreground="#AAA"/>
                                        <TextBlock Text="{Binding ProcessingTotal}" FontSize="16" Foreground="#444"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="10" Margin="6,2" Height="44">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                    <Border Width="36" Height="36" CornerRadius="12" Background="#444c67e6">
                                        <TextBlock Text="&#xe679;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="#4c67e6" FontSize="20"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="当月加工" FontSize="10" Foreground="#AAA"/>
                                        <TextBlock Text="{Binding MonthProcessing}" FontSize="16" Foreground="#444"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="10" Margin="6,2" Height="44">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                    <Border Width="36" Height="36" CornerRadius="12" Background="#44A0B3AC">
                                        <TextBlock Text="&#xe672;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="#5db5cc" FontSize="20"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="当日加工" FontSize="10" Foreground="#AAA"/>
                                        <TextBlock Text="{Binding DayProcessing}" FontSize="16" Foreground="#444"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="10" Margin="6,0" Height="44">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                    <Border Width="36" Height="36" CornerRadius="12" Background="#FFE4E49E">
                                        <TextBlock Text="&#xe67b;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="Orange" FontSize="20"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="当前节拍" FontSize="10" Foreground="#AAA"/>
                                        <TextBlock Text="{Binding CurrentBeat}" FontSize="16" Foreground="#444"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="10" Margin="6,0" Height="44">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                    <Border Width="36" Height="36" CornerRadius="12" Background="#44DAB7C7">
                                        <TextBlock Text="&#xe640;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Foreground="#4c67e6" FontSize="25"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="8,0">
                                        <TextBlock Text="刀具损耗" FontSize="10" Foreground="#AAA"/>
                                        <TextBlock Text="{Binding ToolLoss}" FontSize="16" Foreground="#444"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border CornerRadius="5" Height="80" Width="65" Background="{Binding CameraStateBackground}">
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding CameraState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="相机状态" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border Grid.Column="1" CornerRadius="5" Height="80" Width="65" Background="{Binding PlcStateBackground}">
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding PlcState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="PLC状态" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border Grid.Column="2" CornerRadius="5" Height="80" Width="65" Background="{Binding EmergencyStopBackground}">
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="电控柜急停" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border Grid.Column="3" CornerRadius="5" Height="80" Width="65" Background="{Binding AirPressStateBackground}">
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding ProcessingPressure}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="气源压力" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <Border Grid.Column="4" CornerRadius="5" Height="80" Width="65" Background="{Binding ProcessingStateBackground}">
                                <Grid ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="&#xe660;" FontFamily="{StaticResource Iconfont}" Foreground="#11FFFFFF" FontSize="50" 
                                           HorizontalAlignment="Left" Margin="-20,0,0,0"/>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding ProcessingState}" FontSize="14" Foreground="#333" FontWeight="Bold" Margin="0,5" TextWrapping = "Wrap"/>
                                    </StackPanel>
                                    <TextBlock Text="加工状态" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="12" Foreground="#888"/>
                                </Grid>
                            </Border>

                        </Grid>
                    </Grid>
                </GroupBox>
                <!--第三块-->
                <Grid Grid.Row="2" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="{Binding OperatingModeSwitchingButtonContent}" FontSize="25" FontWeight="Bold" VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Margin="5,0,5,0"
                        Command="{Binding SystemOperatingModelSwitchingCommand}" IsEnabled="{Binding OperatingModeSwitchingButtonEnable}" Height="50"/>
                    <Button Grid.Column="1" Content="{Binding StartStopButtonContent}" FontSize="25" FontWeight="Bold" VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Margin="5,0,5,0"
                        Command="{Binding SystemStartStopCommand}" IsEnabled="{Binding StartStopButtonEnable}" Height="50"/>
                    <Button Grid.Column="2" Content="复 位" FontSize="25" FontWeight="Bold" VerticalAlignment="Center" Style="{StaticResource NormalButtonStyle}" Margin="5,0,5,0"
                        Command="{Binding SystemResetCommand}" IsEnabled="{Binding StartStopButtonEnable}" Height="50"/>
                </Grid>
                <!--第四块-->
                <GroupBox Grid.Row="3" Header="信息" Margin="0,0,0,0" Style="{StaticResource NewGroupBoxStyle}">
                    <ScrollViewer x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto" Margin="10,30,10,10">
                        <ItemsControl ItemsSource="{Binding MessageList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Line X1="0" X2="0" Y1="0" Y2="{Binding ActualHeight,RelativeSource={RelativeSource Mode=Self}}" StrokeThickness="1" 
                                                Stroke="#551e90ff" HorizontalAlignment="Center"/>
                                        <Ellipse Width="6" Height="6" Fill="#AA1e90ff" VerticalAlignment="Top" Margin="0,4,1,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding DateTime}" FontSize="10" Foreground="#FF6D6464" Margin="0,2,0,4"/>
                                            <TextBlock Text="{Binding Message}" Foreground="#FF5A5353" Margin="0,0,0,3" FontSize="12" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
